{
  "[python]": {
    "editor.codeActionsOnSave": {
      "python.sortImports": true
    },
    "editor.formatOnSave": true
  },
  "editor.rulers": [
    88
  ],
  "explorer.sortOrder": "type",
  "files.exclude": {
    "**/*.pyc": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.pytest_cache/": true,
    "**/__pycache__": true,
    "*.egg-info": true,
    ".idea": true,
    "demo": true,
    "venv": true
  },
  "python.formatting.provider": "black",
  "python.linting.mypyEnabled": true
}
